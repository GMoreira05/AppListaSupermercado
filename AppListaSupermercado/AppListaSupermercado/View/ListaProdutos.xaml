<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppListaSupermercado.View.ListaProdutos">

    <!-- ToolbarItems: botão que fica na barra de navegação do app -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="+ Novo" x:Name="Btn_NovoProduto" Clicked="Btn_NovoProduto_Clicked" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <!-- Segunda opção do padding é encima e quarta é embaixo -->
                <Label Text="Lista de Compras"
                       FontSize="Large"
                       Padding="0, 25, 0, 20"
                       HorizontalOptions="CenterAndExpand" />

                
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>